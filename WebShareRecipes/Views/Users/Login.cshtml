@model WebShareRecipes.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Lobster&display=swap" rel="stylesheet">

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Đăng nhập</h2>
        <!-- Hiển thị thông báo lỗi tổng quát từ ModelState -->
        <div asp-validation-summary="All" class="text-danger mb-3 validation-summary-errors" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none");">
        </div>        
        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Tên người dùng</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
        <p class="mt-3 text-center">Chưa có tài khoản? <a href="/Users/Register" style="color: #4A90E2;">Đăng ký ngay</a></p>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        color: #333333;
        background-color: #F5F5F5; /* Màu pastel nhẹ */
    }

    h2 {
        font-family: 'Lobster', cursive;
        color: #4A90E2;
    }

    .btn-primary {
        background-color: #A3BFFA; /* Màu pastel xanh dương */
        border-color: #A3BFFA;
    }

        .btn-primary:hover {
            background-color: #7F9CF5;
            border-color: #7F9CF5;
        }

    .form-control {
        border: 1px solid #E0E0E0;
        border-radius: 4px;
    }

        .form-control:focus {
            border-color: #A3BFFA;
            box-shadow: 0 0 0 0.2rem rgba(163, 191, 250, 0.25);
        }

    .validation-summary-errors {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #f5c6cb;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}