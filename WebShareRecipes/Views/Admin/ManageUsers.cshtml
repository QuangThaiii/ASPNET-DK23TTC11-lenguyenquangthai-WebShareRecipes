@model List<WebShareRecipes.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />

<table id="userTable" class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Tên người dùng</th>
            <th>Email</th>
            <th>Quyền admin</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input toggle-admin"
                               type="checkbox"
                               data-id="@user.UserId"
                        @(user.IsAdmin ? "checked" : "") />
                    </div>
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa người dùng này?')">
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                language: {
                    lengthMenu: "Hiển thị _MENU_ chủ đề mỗi trang",
                    zeroRecords: "Không tìm thấy chủ đề nào",
                    info: "Hiển thị trang _PAGE_ trong tổng số _PAGES_ trang",
                    infoEmpty: "Không có chủ đề nào",
                    infoFiltered: "(lọc từ _MAX_ chủ đề)",
                    search: "Tìm kiếm:",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "Tiếp",
                        previous: "Trước"
                    }
                }
                pageLength: 10
            });
        });
        $('.toggle-admin').on('change', function () {
            const userId = $(this).data('id');
            const isAdmin = $(this).is(':checked'); // Đúng true/false

            $.ajax({
                url: '/Admin/ToggleAdmin',
                method: 'POST',
                data: { id: userId, isAdmin: isAdmin },
                success: function () {
                    console.log("Cập nhật thành công");
                },
                error: function () {
                    alert("Có lỗi xảy ra khi cập nhật quyền admin.");
                }
            });
        });
    </script>
}
